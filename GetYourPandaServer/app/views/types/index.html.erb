<h1>Listing types</h1>

<%= link_to "New type", new_type_path %>

<table>
  <tr>
    <th>Title</th>
    <th colspan="2">Action</th>
  </tr>
 
  <% @types.each do |type| %>
    <tr>
      <td><%= type.name %></td>
      <td><%= link_to 'Show', type_path(type) %></td>
      <td><%= link_to 'Edit', edit_type_path(type) %></td>
    </tr>
  <% end %>
</table>